<div>
	<div class="options">
		<%= semantic_form_for @player, :url => registered_login_path do |f| %>
			<%= f.input :email %>
			<%= f.actions do %>
				<%= f.action :submit, :label => 'Play', :button_html => {:class => 'btn small'} %>
			<% end %>
		<% end %>

		<br />

